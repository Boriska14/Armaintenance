<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Surface view pour afficher la caméra et le contenu AR -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Surface pour le rendu OpenGL -->
    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Message d'état en haut -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#AA000000"
        android:gravity="center"
        android:padding="12dp"
        android:text="Vérification de la compatibilité ARCore..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <!-- Container pour les contrôles UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Bouton principal AR -->
        <Button
            android:id="@+id/ar_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Démarrer AR"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:enabled="false" />

        <!-- Bouton pour placer un objet -->
        <Button
            android:id="@+id/place_object_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Placer Objet"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Bouton pour réinitialiser -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Réinitialiser"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Indicateur de chargement -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>